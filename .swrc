{
  "$schema": "https://swc.rs/schema.json",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "baseUrl": "./src",
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@/tests/*": [
        "tests/*"
      ]
    },
    "target": "esnext"
  },
  "module": {
    "type": "es6",
    "strict": true
  },
  "minify": true
}
